extends layout

block content
  each card in cards
    .card
      .row
        .col-sm-4
          if card.rarity == 'P'
            a(href="#", data-featherlight="/images/#{card.setName}/#{card.setNumber}p.jpg")
              img.card-img(src="/images/#{card.setName}/#{card.setNumber}p.jpg")
          else if card.rarity == "S"
            a(href="#", data-featherlight="/images/#{card.setName}/#{card.setNumber}s.jpg")
              img.card-img(src="/images/#{card.setName}/#{card.setNumber}s.jpg")
          else
            a(href="#", data-featherlight="/images/#{card.setName}/#{card.setNumber}.jpg")
              img.card-img(src="/images/#{card.setName}/#{card.setNumber}.jpg")
        .col-sm-8.card-info
          h2.capitalize
            strong #{card.name}
          p #{card.setName} #{card.rarity}#{card.setNumber}
          p #{card.color} #{card.type}
          if card.alignment != 'Either'
            p #{card.alignment}
          p #{card.text}
          if card.endurance != '0'
            p Endurance: #{card.endurance}
          form.form-horizontal(method="post", action="/edit")
            .form-group.col-sm-2
              input.hidden(type="text", name="name", value="#{card.name}")
              input.form-control.btn-warning(type="submit", value="Edit")
      .row
        .col-sm-12
          hr
